<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/xml_agent_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="25dp"
    >

    <TextView
        android:id="@+id/agentname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="Agent Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:weightSum="3"
        >

        <ImageView
            android:id="@+id/img_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/phonecall"
            android:tint="@color/colorPrimary"
            />

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/mail"
            android:tint="@color/colorPrimary"
            />

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/map"
            android:tint="@color/colorPrimary"
            />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Details"
        />

    <LinearLayout
        android:id="@+id/linear_agent_attribute_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/text_agent_attribute_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="Speciality"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/info_agent_attribute_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="Ear Specialist"
            tools:visibility="visible"
            />

</LinearLayout>

    <LinearLayout
        android:id="@+id/linear_agent_attribute_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/text_agent_attribute_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="Addresses"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/info_agent_attribute_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="Baker Street"
            tools:visibility="visible"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_agent_attribute_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/text_agent_attribute_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="Degrees"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/info_agent_attribute_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="MBBS , FCPS"
            tools:visibility="visible"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_agent_attribute_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/text_agent_attribute_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="Hospital"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/info_agent_attribute_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="Dhaka Medical College"
            tools:visibility="visible"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_agent_attribute_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/text_agent_attribute_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="Practice"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/info_agent_attribute_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="10 years"
            tools:visibility="visible"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:weightSum="2"
        android:layout_marginBottom="20dp"
        >

    <Button
        android:id="@+id/btnToBookmark"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_gravity="bottom"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:text="Bookmark"
        android:textColor="@android:color/black"
        />

    <Button
        android:id="@+id/btnToCompare"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="Compare"
        android:textColor="@android:color/black"
        />

</LinearLayout>

</LinearLayout>
