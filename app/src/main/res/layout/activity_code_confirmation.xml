<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:id="@+id/activity_code_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imm.citi.activities.CodeConfirmationActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        >

        <EditText
            android:id="@+id/etxtCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter the code"
            android:inputType="none"
            android:maxLength="6"
            android:singleLine="true"
            android:textColorHint="@android:color/white" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btnCodeSubmit"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:text="SUBMIT"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/btnCodeReset"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:text="Resend Code"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/btnCodeCancel"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:text="Cancel"
        android:textColor="@android:color/white"
        />

</LinearLayout>

