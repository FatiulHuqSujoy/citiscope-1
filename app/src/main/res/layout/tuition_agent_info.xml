<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_area"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Areas"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_area"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:hint="put ; for multiple inputs"
            android:layout_toRightOf="@id/text_area" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_medium"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Mediums"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_medium"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:textColor="@color/colorAccent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text_medium"
            android:layout_toEndOf="@+id/text_medium" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_class"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Interested Classes"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_class"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_class" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_subjects"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Subjects"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_subjects"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_subjects" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_school_name"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="College"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_school_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_school_name" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_college_name"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="College"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_college_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_college_name" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_university_name"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="University"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_university_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"

            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_university_name" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_occupation"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Occupation"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_occupation"
            android:layout_width="220dp"
            android:layout_height="wrap_content"

            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_occupation" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_tuitions"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Tuitions done"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_tuitions"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_tuitions" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_link"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Profile/blog Link"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_link"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_link" />

    </RelativeLayout>


</LinearLayout>
