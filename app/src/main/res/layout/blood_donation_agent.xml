<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_blood_type"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Blood Type"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_blood_type"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:inputType="text"
            android:layout_toRightOf="@id/text_blood_type" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_smoking"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Smoking Habit"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_smoking"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_smoking" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_donations"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Donations Done"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_donations"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_donations" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text_since_donated"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Since Last Donated"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_since_donated"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/text_since_donated" />

    </RelativeLayout>



</LinearLayout>
