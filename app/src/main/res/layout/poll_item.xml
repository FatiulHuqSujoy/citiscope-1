<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor= "@color/colorAccent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2dp"

    >

    <LinearLayout
        android:id="@+id/xml_agent_info"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp"
        >

        <TextView
            android:id="@+id/text_vote_count"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Votes"
            />

        <TextView
            android:id="@+id/text_nomination_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Nomination Name"
            />

        <TextView
            android:id="@+id/text_nomination_description"
            android:layout_width="280dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Nomination Details"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btnToVote"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:text="Vote"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/btnToSeeDetails"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="@color/colorPrimary"
                android:text="More Details"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/btnToEdit"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:text="Edit"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:visibility="gone"
                />


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>