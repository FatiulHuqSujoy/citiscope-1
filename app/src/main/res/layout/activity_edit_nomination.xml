<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.imm.citi.activities.EditNominationActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/view_nomination_name"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Nomination Name"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_nomination_name"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/view_nomination_name"
                        android:hint="Give a unique name"
                        android:inputType="text"
                        android:textColor="@color/colorAccent" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/view_nominations_details"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Description"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_nominations_details"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/view_nominations_details"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:textColor="@color/colorAccent" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/view_source_list"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Source"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_source_list"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/view_source_list"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:textColor="@color/colorAccent" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/view_filter_list"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Potential Filter List"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_filter_list"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/view_filter_list"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:textColor="@color/colorAccent" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/view_city_list"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Cities to Cover"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_city_list"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/view_city_list"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:textColor="@color/colorAccent" />

                </RelativeLayout>


                <Button
                    android:id="@+id/btnToSaveNomination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent"
                    android:text="Save Changes"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
