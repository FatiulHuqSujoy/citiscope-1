<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_account"
android:layout_width="match_parent"
android:layout_height="match_parent"
>

<FrameLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottom_layout"/>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_alignParentBottom="true"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:weightSum="4">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_notification"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_notifications_white_24dp" />

        <TextView
            android:id="@+id/txt_notification_count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-8dp"
            android:layout_toRightOf="@id/img_notification"
            android:background="@drawable/black_circular_bg"
            android:gravity="center"
            android:text="1"
            android:visibility="visible"
            tools:visibility="visible"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="12dp"
        android:src="@drawable/ic_home_white_24dp" />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="12dp"
        android:src="@drawable/ic_account_box_white_24dp" />


    <ImageView
        android:id="@+id/img_poll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="12dp"
        android:src="@drawable/ic_poll_white_24dp" />

</LinearLayout>


</RelativeLayout>
