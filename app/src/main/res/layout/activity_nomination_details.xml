<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="16dp"
    tools:context="com.example.imm.citi.activities.NominationDetailsActivity">

    <TextView
        android:id="@+id/text_nomination_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nomination Name"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/text_nominator_name"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Nominated By"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/set_nominator_name"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:inputType="text"
                    android:layout_toRightOf="@id/text_nominator_name" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/text_nominations_details"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Description"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/set_nomination_details"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:textColor="@color/colorAccent"
                    android:layout_toRightOf="@id/text_nominations_details" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/text_source_list"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Source"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/set_source_list"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:textColor="@color/colorAccent"
                    android:layout_toRightOf="@id/text_source_list" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/text_filter_list"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Potential Filter List"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/set_filter_list"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:textColor="@color/colorAccent"
                    android:layout_toRightOf="@id/text_filter_list" />

            </RelativeLayout>


            <Button
                android:id="@+id/btnToEditNomination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:text="Edit"
                />

            <Button
                android:id="@+id/btnToRemoveNomination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:layout_gravity="bottom"
                android:textColor="@android:color/white"
                android:text="Remove"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
